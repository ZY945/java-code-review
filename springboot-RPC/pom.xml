<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.web</groupId>
        <artifactId>springboot2-jdk8-study</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <groupId>com.web.rpc</groupId>
    <artifactId>springboot-RPC</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <properties>
<!--        <revision>1.0.0-SNAPSHOT</revision>-->
        <spring-boot.version>2.7.12</spring-boot.version>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <modules>
        <module>rpc-core</module>
        <module>rpc-client</module>
        <module>rpc-server</module>
        <module>rpc-spring-boot-starter</module>
        <module>rpc-example-api</module>
        <module>rpc-example-client</module>
        <module>rpc-example-server</module>
    </modules>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>4.1.100.Final</version>
            </dependency>
            <dependency>
                <groupId>io.etcd</groupId>
                <artifactId>jetcd-core</artifactId>
                <version>0.7.5</version>
            </dependency>
            <dependency>
                <groupId>com.fasterxml.jackson.core</groupId>
                <artifactId>jackson-databind</artifactId>
                <version>2.15.2</version>
            </dependency>
            <dependency>
                <groupId>com.web.rpc</groupId>
                <artifactId>rpc-core</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>com.web.rpc</groupId>
                <artifactId>rpc-client</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>com.web.rpc</groupId>
                <artifactId>rpc-server</artifactId>
                <version>${revision}</version>
            </dependency>

            <dependency>
                <groupId>com.example.rpc</groupId>
                <artifactId>rpc-api</artifactId>
                <version>${revision}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>